<div class="page-header">
  <h1>New Picture</h1>
</div>

<%= form_tag(pictures_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :image_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= url_field_tag :image_url, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :caption, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :caption, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Picture", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
